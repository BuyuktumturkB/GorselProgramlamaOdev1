<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurakBuyuktumturkOdev1.RenkPaleti"
             Title="RenkPaleti">
    <StackLayout x:Name="StackArkaPlan">
        <StackLayout  Margin="20,20,20,20" BackgroundColor="White" >


            <Label Text=" Kırmızı Renk Sürgüsü" />
            <Slider x:Name="Kırmızı" ThumbColor="Red" MinimumTrackColor="PaleVioletRed" MaximumTrackColor="DarkRed" Margin="20,20,20,20" Scale="1.2" ValueChanged="DegerDegistir" Maximum="255"/>
            <Label Text=" Yeşil Renk Sürgüsü" />
            <Slider x:Name="Yeşil" ThumbColor="Green" MinimumTrackColor="LightGreen" MaximumTrackColor="DarkGreen" Scale="1.2" Margin="20,20,20,20" ValueChanged="DegerDegistir" Maximum="255"/>
            <Label Text=" Mavi Renk Sürgüsü" />
            <Slider x:Name="Mavi " ThumbColor="Blue" MinimumTrackColor="LightBlue" MaximumTrackColor="DarkBlue" Scale="1.2" Margin="20,20,20,20" ValueChanged="DegerDegistir" Maximum="255"/>

            <Label x:Name=" RenkKodu" Text="Renk Kodu : " Margin="15,15,15,15"/>
            <Button  Text=" Kopyala "  Margin="15,15,15,15" Clicked="RenkKopyala" />
            <Button Text="Rastgele Renk"   Margin="15,15,15,15" Clicked="RastgeleRenk"/>



        </StackLayout>
    </StackLayout>
</ContentPage>